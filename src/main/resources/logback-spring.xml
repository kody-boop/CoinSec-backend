<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <property name="LOG_BASE_DIR" value="/var/log/coinsec"/>
    <property name="AUDIT_ENCRYPT_KEY" value="${audit.log.encryption.key:-default-fallback-key-32bytes!}"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>

    <!-- 目录初始化（消除WARN） -->
    <appender name="DIRECTORY_INIT" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_BASE_DIR}/.init</file>
        <encoder>
            <pattern>init</pattern>
        </encoder>
        <append>false</append>
    </appender>
    <logger name="directory.init" level="OFF" additivity="false">
        <appender-ref ref="DIRECTORY_INIT"/>
    </logger>

    <!-- 业务日志 -->
    <appender name="BUSINESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/business.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_BASE_DIR}/business.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} [%X{traceId}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- 审计日志 -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_BASE_DIR}/audit.%d{yyyy-MM-dd}.log.gpg</fileNamePattern>
            <maxHistory>180</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder class="com.coinsec.backend.common.utils.EncryptedPatternLayoutEncoder">
            <secretKey>${AUDIT_ENCRYPT_KEY}</secretKey>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %logger{40} [%X{traceId}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- 彩色控制台日志（开发环境用） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <withJansi>true</withJansi> <!-- 启用ANSI颜色 -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS}
                [%magenta(%thread)]
                %highlight(%-5level) %cyan(%logger{40})
                [%X{traceId}] - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- 日志级别控制 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
    </root>

    <logger name="com.coinsec.security" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE"/>
    </logger>
</configuration>